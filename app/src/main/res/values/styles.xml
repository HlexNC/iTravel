<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ==================== BUTTONS ==================== -->

    <style name="Widget.ITravel.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/teal_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Widget.ITravel.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/orange_accent_container</item>
        <item name="android:textColor">@color/on_secondary_container</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Widget.ITravel.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/teal_primary</item>
        <item name="android:textColor">@color/teal_primary</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Widget.ITravel.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/teal_primary</item>
    </style>

    <!-- ==================== CARDS ==================== -->

    <style name="Widget.ITravel.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="Widget.ITravel.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="strokeColor">@color/outline_variant</item>
    </style>

    <!-- ==================== TEXT INPUT ==================== -->

    <style name="Widget.ITravel.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/radius_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_sm</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_sm</item>
    </style>

    <!-- ==================== CHIPS ==================== -->

    <style name="Widget.ITravel.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="checkedIconEnabled">true</item>
    </style>

    <!-- ==================== BOTTOM NAVIGATION ==================== -->

    <style name="Widget.ITravel.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/teal_primary</item>
        <item name="itemTextColor">@color/teal_primary</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.ITravel.BottomNav.ActiveIndicator</item>
    </style>

    <style name="Widget.ITravel.BottomNav.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/teal_primary_container</item>
    </style>

    <!-- ==================== TEXT APPEARANCES ==================== -->

    <style name="TextAppearance.ITravel.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.ITravel.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.ITravel.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.ITravel.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.ITravel.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.ITravel.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.ITravel.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.ITravel.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/on_surface</item>
    </style>
</resources>
