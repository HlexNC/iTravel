<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.ITravel.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_base">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFeedImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_card_image_height"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintBottom_toBottomOf="@id/ivFeedImage" />

        <TextView
            android:id="@+id/tvFeedTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:shadowColor="@color/scrim_medium"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            app:layout_constraintBottom_toTopOf="@id/tvAuthorName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutWeather" />

        <LinearLayout
            android:id="@+id/layoutWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_base"
            android:layout_marginBottom="@dimen/spacing_base"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_background_semi_transparent"
            android:padding="@dimen/spacing_xs"
            app:layout_constraintBottom_toBottomOf="@id/ivFeedImage"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:src="@drawable/ic_weather_default"
                android:importantForAccessibility="no"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvWeatherTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_body_small"
                android:layout_marginStart="@dimen/spacing_xs"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginBottom="@dimen/spacing_base"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body_small"
            android:alpha="0.9"
            app:layout_constraintBottom_toBottomOf="@id/ivFeedImage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_base"
            android:textColor="@color/on_surface"
            android:textSize="@dimen/text_body_small"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/ivFeedImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
