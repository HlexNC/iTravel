<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.ITravel.Card.Outlined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_base">

        <!-- Header: Avatar + Name + Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReviewAvatar"
                android:layout_width="@dimen/avatar_size_sm"
                android:layout_height="@dimen/avatar_size_sm"
                android:background="@drawable/bg_profile_avatar"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_body_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvReviewerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_body_small"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

                <TextView
                    android:id="@+id/tvReviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_caption"
                    android:textColor="@color/on_surface_variant" />

            </LinearLayout>

            <!-- Star rating display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_size_sm"
                    android:layout_height="@dimen/icon_size_sm"
                    android:src="@drawable/ic_star_filled"
                    android:importantForAccessibility="no"
                    app:tint="@color/rating_star" />

                <TextView
                    android:id="@+id/tvReviewRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xxs"
                    android:textSize="@dimen/text_body_small"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

            </LinearLayout>

        </LinearLayout>

        <!-- Review text -->
        <TextView
            android:id="@+id/tvReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:textSize="@dimen/text_body_small"
            android:textColor="@color/on_surface"
            android:lineSpacingMultiplier="1.3" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
