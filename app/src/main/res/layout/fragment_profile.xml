<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_lg"
            android:background="@color/teal_primary">

            <TextView
                android:id="@+id/tvProfileAvatar"
                android:layout_width="@dimen/avatar_size_xl"
                android:layout_height="@dimen/avatar_size_xl"
                android:background="@drawable/bg_profile_avatar"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_headline"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/spacing_md" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/off_white"
                android:textSize="@dimen/text_body_small"
                android:alpha="0.9"
                android:layout_marginTop="@dimen/spacing_xs" />

        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_base"
            android:baselineAligned="false">

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ITravel.Card.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tvStatReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/text_headline"
                        android:textStyle="bold"
                        android:textColor="@color/teal_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews_count"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ITravel.Card.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/spacing_sm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tvStatVisited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/text_headline"
                        android:textStyle="bold"
                        android:textColor="@color/orange_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/locations_visited"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.ITravel.Card.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tvStatAvgRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€”"
                        android:textSize="@dimen/text_headline"
                        android:textStyle="bold"
                        android:textColor="@color/rating_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_rating"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- My Reviews Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_reviews"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_md" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewProfileReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="@dimen/spacing_base"
            android:layoutAnimation="@anim/layout_animation_fall_down" />

        <!-- Empty reviews state -->
        <LinearLayout
            android:id="@+id/layoutNoProfileReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_xl"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/avatar_size_lg"
                android:layout_height="@dimen/avatar_size_lg"
                android:src="@drawable/ic_review"
                android:importantForAccessibility="no"
                app:tint="@color/outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_reviews_profile"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/on_surface_variant"
                android:layout_marginTop="@dimen/spacing_md" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_exploring"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/outline"
                android:layout_marginTop="@dimen/spacing_xs" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/outline_variant"
            android:layout_marginHorizontal="@dimen/spacing_base"
            android:layout_marginTop="@dimen/spacing_lg" />

        <!-- Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_base">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="@dimen/spacing_md" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:src="@drawable/ic_info"
                    android:importantForAccessibility="no"
                    app:tint="@color/on_surface_variant" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_base">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_itravel"
                        android:textSize="@dimen/text_body"
                        android:textColor="@color/on_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_version"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_body_small"
                    android:textColor="@color/on_surface_variant" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.ITravel.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textColor="@color/coral_action"
                app:strokeColor="@color/coral_action"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/coral_action"
                app:iconGravity="textStart"
                android:layout_marginTop="@dimen/spacing_lg" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xl" />

    </LinearLayout>

</ScrollView>
